<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Samba.Modules.PackageServiceModule.PackageServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Samba.Modules.PackageServiceModule"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=local:PackageServiceViewModel}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Baslik -->
        <TextBlock Grid.Row="0"
                   Text="{Binding HeaderText}"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#FF2B2B2B"
                   Margin="0,0,0,5"/>

        <!-- Aciklama -->
        <TextBlock Grid.Row="1"
                   Text="{Binding Description}"
                   TextWrapping="Wrap"
                   Foreground="#FF4B4B4B"
                   Margin="0,0,0,15"/>

        <!-- Ana icerik: TabControl -->
        <TabControl Grid.Row="2">

            <!-- TAB 1: Yeni Siparis (Musteri arama + siparis ekleme) -->
            <TabItem Header="Yeni Siparis">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Arama satiri -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,10">
                        <TextBlock Text="Musteri ara:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBox Width="220"
                                 Margin="0,0,5,0"
                                 Text="{Binding CustomerSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Ara"
                                Padding="10,3"
                                Command="{Binding SearchCustomersCommand}"/>
                    </StackPanel>

                    <!-- Bulunan Musteriler listesi -->
                    <GroupBox Grid.Row="1"
                              Header="Bulunan Musteriler">
                        <ListBox ItemsSource="{Binding CustomerResults}"
                                 SelectedItem="{Binding SelectedCustomer}"
                                 DisplayMemberPath="Name"/>
                    </GroupBox>

                    <!-- Secili musteriy e siparis ekle butonu -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Secili Musteriye Siparis Ekle"
                                Padding="12,4"
                                Command="{Binding AddOrderForSelectedCustomerCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: Paketci Atama (Paketci arama + Bekleyen Siparis atama) -->
            <TabItem Header="Paketci Atama">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sol taraf: Paketci arama ve listesi -->
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Paketci arama -->
                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Paketci ara:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0"/>
                            <TextBox Width="140"
                                     Margin="0,0,5,0"
                                     Text="{Binding CourierSearchText, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Content="Ara"
                                    Padding="8,3"
                                    Command="{Binding SearchCouriersCommand}"/>
                        </StackPanel>

                        <!-- Paketci listesi -->
                        <GroupBox Grid.Row="1"
                                  Header="Paketciler">
                            <ListBox ItemsSource="{Binding CourierResults}"
                                     SelectedItem="{Binding SelectedCourier}"
                                     DisplayMemberPath="Name"/>
                        </GroupBox>
                    </Grid>

                    <!-- Sag taraf: Bekleyen siparisler -->
                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0"
                                  Header="Bekleyen Siparisler"
                                  Margin="0,0,0,10">
                            <ListBox ItemsSource="{Binding PendingOrders}"
                                     SelectedItem="{Binding SelectedPendingOrder}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2"
                                                Padding="4"
                                                BorderBrush="#33000000"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock Text="{Binding CustomerName}"
                                                           FontWeight="Bold"/>
                                                <TextBlock>
                                                    <Run Text="Tutar: "/>
                                                    <Run Text="{Binding Total, StringFormat={}{0:C}}"/>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Run Text="Durum: "/>
                                                    <Run Text="{Binding State}"/>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Run Text="Paketci: "/>
                                                    <Run Text="{Binding CourierName}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="10"
                                                           Foreground="Gray">
                                                    <Run Text="TicketId: "/>
                                                    <Run Text="{Binding TicketId}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Secili Bekleyen Siparise Secili Paketciyi Ata"
                                    Padding="12,4"
                                    Command="{Binding AssignCourierToSelectedOrdersCommand}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- TAB 3: Yoldaki Siparisler -->
            <TabItem Header="Yoldaki Siparisler">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0"
                              Header="Yoldaki Siparisler">
                        <ListBox ItemsSource="{Binding OnTheWayOrders}"
                                 SelectedItem="{Binding SelectedOnTheWayOrder}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="2"
                                            Padding="4"
                                            BorderBrush="#33000000"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}"
                                                       FontWeight="Bold"/>
                                            <TextBlock>
                                                <Run Text="Tutar: "/>
                                                <Run Text="{Binding Total, StringFormat={}{0:C}}"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Paketci: "/>
                                                <Run Text="{Binding CourierName}"/>
                                            </TextBlock>
                                            <TextBlock>
                                                <Run Text="Durum: "/>
                                                <Run Text="{Binding State}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="10"
                                                       Foreground="Gray">
                                                <Run Text="TicketId: "/>
                                                <Run Text="{Binding TicketId}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </GroupBox>

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,10,0,0">
                        <Button Content="Adisyona Git"
                                Padding="12,4"
                                Margin="0,0,5,0"
                                Command="{Binding GoToTicketCommand}"/>
                        <Button Content="Teslim Edildi"
                                Padding="12,4"
                                Command="{Binding MarkDeliveredCommand}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>